<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNP-RECIBOS-APP</title>
    <link rel="stylesheet" href="../css/main.css">
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <div class="container mx-auto my-5 mw-75 p-0">
        <table class="table table-dark table-hover caption-top p-0 container-fluid">
            <caption class="bg-warning text-center text-black"><h3 class="text-center mt-2">EXTRAS</h3></caption>
            <thead>
                <tr>
                  <th scope="col">NOMBRE</th>
                  <th scope="col">CONCEPTO</th>
                  <th scope="col">SUELDO</th>
                  <th scope="col">ACTIONS</th>
                </tr>
              </thead>
              <tbody>
                <form id="form-extras" method="POST" action="/extras">
                  <tr class="table-dark">
                     <td><input type="text" name="name" id="name" required></td>
                     <td><input type="text" name="concept" id="concept" required></td>
                     <td><input type="string" name="salary" id="salary"></td>
                     <td><button class="btn btn-sm btn-outline-success rounded-pill" type="submit" id="btn-add">AGREGAR</button></td>
                  </tr>
                </form>
              <% if(extras.length > 0) { %>
                  <% extras.forEach( e =>  { %>
                    <form action="/extras/<%= e._id %>?_method=DELETE" method="POST" id="formDelete<%=e._id%>"></form>
                    <form action="/extras/<%=e._id%>?_method=PUT" method="POST" id="<%=e._id%>">
                      <tr class="table-dark">
                        <td class="td-align-center"><%= e.name%></td>
                        <td class="td-align-center"><%= e.concept%></td>
                        <td class="td-align-center"><%= e.salary%></td>
                        <td hidden><%= e._id %></td>
                        <td>
                          <div class= "d-flex flex-row">
                            <button type="button" class="btn btn-sm btn-outline-info rounded-pill me-1 btn-edit-extras">editar</button>
                            <button class="btn btn-sm btn-outline-danger rounded-pill" form="formDelete<%=e._id%>">eliminar</button>
                          </div>
                        </td>
                      </tr>
                    </form> 
                  <% })%>
                <% } %>  
            </tbody>
          </table>
    </div>

    <script src="../js/extras.js" type="module"></script>
</body>
</html>